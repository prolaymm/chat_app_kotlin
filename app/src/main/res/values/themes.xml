<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_primary_color</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>

        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/secondaryColor</item>
        <item name="cardBackgroundColor">@color/white</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="GreyAppBarLayout" parent="Widget.Design.AppBarLayout">

        <item name="android:background">@color/app_bg_light_grey</item>
        <item name="elevation">0dp</item>
        <item name="android:paddingLeft">@dimen/defaultMarginHorizontal</item>
        <item name="android:paddingTop">@dimen/defaultMarginVertical</item>
        <item name="android:paddingRight">@dimen/defaultMarginHorizontal</item>
        <item name="android:paddingBottom">@dimen/defaultMarginVertical</item>
    </style>
<!--    android:paddingLeft="@dimen/defaultMarginHorizontal"
    android:paddingTop="@dimen/defaultMarginVertical"
    android:paddingRight="@dimen/defaultMarginHorizontal"
    android:paddingBottom="@dimen/defaultMarginVertical"-->

    <style name="WhiteAppBarTitle">
        <item name="android:textSize">@dimen/appBarTitleSize</item>
        <item name="android:textColor">@color/main_primary_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/norma_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="HintTextStyle">
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="LargeTextStyle">
        <item name="android:textSize">@dimen/largeBodyTextSize</item>
        <item name="android:textColor">@color/norma_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>